#!/bin/bash



dropbear_pids () {
  port_dropbear=`ps aux|grep 'dropbear'|awk NR==1|awk '{print $17;}'`
  log=/var/log/auth.log
  loginsukses='Password auth succeeded'
  pids=`ps ax|grep 'dropbear'|grep " $port_dropbear"|awk -F " " '{print $1}'`
  for pid in $pids; do
    pidlogs=`grep $pid $log |grep "$loginsukses" |awk -F" " '{print $3}'`
    i=0
    for pidend in $pidlogs; do
      let i=i+1
    done
    if [ $pidend ];then
       login=`grep $pid $log |grep "$pidend" |grep "$loginsukses"`
       PID=$pid
       user=`echo $login |awk -F" " '{print $10}' | sed -r "s/'/ /g"`
       waktu=`echo $login |awk -F" " '{print $2"-"$1,$3}'`
       while [ ${#waktu} -lt 13 ]; do
           waktu=$waktu" "
       done
       while [ ${#user} -lt 16 ]; do
           user=$user" "
       done
       while [ ${#PID} -lt 8 ]; do
           PID=$PID" "
       done
       echo "$user $PID $waktu"
    fi
done
}

_on="\033[0;31m [\033[0;32mON\033[0;31m]"
_off="\033[0;31m [OFF]"
meu_ip () {
  if [[ -e /bin/ejecutar/IPcgh ]]; then
    IP="$(cat /bin/ejecutar/IPcgh)"
  else
    MEU_IP=$(ip addr | grep 'inet' | grep -v inet6 | grep -vE '127\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}' | grep -o -E '[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}' | head -1)
    MEU_IP2=$(wget -qO- ipv4.icanhazip.com)
    [[ "$MEU_IP" != "$MEU_IP2" ]] && IP="$MEU_IP2" && echo "$MEU_IP2" || IP="$MEU_IP" && echo "$MEU_IP"
    echo "$MEU_IP2" > /bin/ejecutar/IPcgh
	IP="$MEU_IP2"
  fi
}

ports_ () {
unset puertos texto texto_ svcs porta
local texto
local texto_
local puertos
local svcs
local PT=$(lsof -V -i tcp -P -n | grep -v "ESTABLISHED" |grep -v "COMMAND" | grep "LISTEN")
local _ps="$(ps x)"
x=1
for porta in `echo -e "$PT" | cut -d: -f2 | cut -d' ' -f1 |sort -n | uniq`; do
    [[ -z $porta ]] && continue
    porta[$x]="$porta"
    svcs[$x]="$(echo -e "$PT" | grep -w "$porta" | awk '{print $1}' | uniq | tail -1)"
    let x++;
done

for((i=1; i<$x; i++)); do
    [[ ! -z ${svcs[$i]} ]] && texto="\033[1;34m âˆ˜ \033[1;37m${svcs[$i]}: \033[1;31m${porta[$i]}" || texto=''
    case ${svcs[$i]} in
        apache2) texto="\033[1;34m âˆ˜ \033[1;37mAPACHE: \033[1;31m${porta[$i]}" ;;
        node) texto="\033[1;34m âˆ˜ \033[1;37mWebSocket: \033[1;31m${porta[$i]}" ;;
        clash) texto="\033[1;34m âˆ˜ \033[1;37mClash: \033[1;31m${porta[$i]}" ;;
        psiphond) texto="\033[1;34m âˆ˜ \033[1;37mPSIPHON: \033[1;31m${porta[$i]}" ;;
        xray-v2-u|xray-linu) texto="\033[1;34m âˆ˜ \033[1;37mXRAY/UI: \033[1;31m${porta[$i]}" ;;
        v2-ui) texto="\033[1;34m âˆ˜ \033[1;37mV2-UI/WEB: \033[1;31m${porta[$i]}" ;;
        x-ui) texto="\033[1;34m âˆ˜ \033[1;37mXUI/WEB: \033[1;31m${porta[$i]}" ;;
        openvpn) texto="\033[1;34m âˆ˜ \033[1;37mOPENVPN-TCP: \033[1;31m${porta[$i]}" ;;
        squid|squid3) texto="\033[1;34m âˆ˜ \033[1;37mSQUID: \033[1;31m${porta[$i]}" ;;
        dropbear) texto="\033[1;34m âˆ˜ \033[1;37mDROPBEAR: \033[1;31m${porta[$i]}" ;;
        python3) texto="\033[1;34m âˆ˜ \033[1;37mSOCKS/PYTHON3: \033[1;31m${porta[$i]}" ;;
        python) texto="\033[1;34m âˆ˜ \033[1;37mSOCKS/PYTHON: \033[1;31m${porta[$i]}" ;;
        obfs-serv) texto="\033[1;34m âˆ˜ \033[1;37mSSR (OBFS): \033[1;31m${porta[$i]}" ;;
        ss-server) texto="\033[1;34m âˆ˜ \033[1;37mSSR (LIV): \033[1;31m${porta[$i]}" ;;
        sshd|ssh) texto="\033[1;34m âˆ˜ \033[1;37mSSH: ${porta[$i]}" ;;
        systemd-r) texto="\033[1;34m âˆ˜ \033[1;37mSystem-DNS: \033[1;31m${porta[$i]}" ;;
        stunnel4|stunnel) texto="\033[1;34m âˆ˜ \033[1;37mSSL: \033[1;31m${porta[$i]}" ;;
        v2ray) texto="\033[1;34m âˆ˜ \033[1;37mV2RAY: \033[1;31m${porta[$i]}" ;;
        xray) texto="\033[1;34m âˆ˜ \033[1;37mXRAY: \033[1;31m${porta[$i]}" ;;
        badvpn-ud) texto="\033[1;34m âˆ˜ \033[1;37mBadVPN: \033[1;31m${porta[$i]}" ;;
        trojan) texto="\033[1;34m âˆ˜ \033[1;37mTrojan-GO: \033[1;31m${porta[$i]}" ;;
        sslh) texto="\033[1;34m âˆ˜ \033[1;37mSSLH: \033[1;31m${porta[$i]}" ;;
        nc.tradit) texto="\033[1;34m âˆ˜ \033[1;37mKeyGen: \033[1;31mON" ;;
        filebrows) texto="\033[1;34m âˆ˜ \033[1;37mFileBrowser: \033[1;31m${porta[$i]}" ;;
        rpcbind) texto="\033[1;34m âˆ˜ \033[1;37mRPCBind: \033[1;31m${porta[$i]}" ;;
        snell-ser) texto="\033[1;34m âˆ˜ \033[1;37mSNell: \033[1;31m${porta[$i]}" ;;
    esac
    puertos+="${texto}\n"
done

local _PT=$(lsof -V -i UDP -P -n | grep -v "ESTABLISHED" |grep -v "COMMAND"|grep -E 'openvpn|dns-serve|udpServer|hysteria|UDP-Custo|Hysteria2')
x=1
for porta in `echo -e "$_PT" | cut -d: -f2 | cut -d' ' -f1 |sort -n | uniq`; do
    [[ -z $porta ]] && continue
    _porta[$x]="$porta"
    _svcs[$x]="$(echo -e "$_PT" | grep -w "$porta" | awk '{print $1}' | uniq | tail -1)"
    let x++;
done
for((i=1; i<$x; i++)); do
    [[ ! -z ${_svcs[$i]} ]] && texto="\033[1;34m âˆ˜ \033[1;37m${_svcs[$i]}: \033[1;31m${_porta[$i]}" || texto=''
    case ${_svcs[$i]} in
        dns-serve) texto="\033[1;34m âˆ˜ \033[1;37mSlowDNS: \033[1;31m${_porta[$i]}" ;;
        openvpn) texto="\033[1;34m âˆ˜ \033[1;37mOPENVPN-UDP: \033[1;31m${_porta[$i]}" ;;
        udpServer) texto="\033[1;34m âˆ˜ \033[1;37mUDPServer: \033[1;31m${_porta[$i]}" ;;
        hysteria) texto="\033[1;34m âˆ˜ \033[1;37mHysteriaUDP: \033[1;31m${_porta[$i]}" ;;
        UDP-Custo) texto="\033[1;34m âˆ˜ \033[1;37mUDP-Custom: \033[1;31m${_porta[$i]}" ;;
    esac
    puertos+="${texto}\n"
done

[[ $(echo -e "$puertos" | grep 'SSH: 22') ]] && {
    export PATH=$PATH:/usr/sbin:/usr/local/sbin:/usr/local/bin:/usr/bin:/sbin:/bin:/usr/games
    [[ -z $(locale | grep "LANG=" | cut -d "=" -f2) ]] && export LANG=en_US.UTF-8
    echo -e "$puertos"
} || echo -e "âš ï¸ PUERTOS SSH TRUNCADO POR DROPBEAR âš ï¸\nColoca: sudo -i\nVe al menu 7, opciÃ³n 7"

local PIDGEN=$(echo -e "${_ps}"| grep "BotGen.sh" | grep -v grep |awk '{print $1}')
[[ ! -z $PIDGEN ]] && {
    local botG="\033[1;34m âˆ˜ \033[1;37m BotGen Telegram ðŸ¤– : \033[1;31m âš¡ ACTIVO âš¡"
    echo -e "$botG"
    unset svcs porta puertos i x
}
}

ports_

echo -e " Hola "
ports_
