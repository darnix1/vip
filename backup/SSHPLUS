#!/bin/bash

# ConfiguraciÃ³n
ANCHO=20           # Ancho del Ã¡rea de la animaciÃ³n
VELOCIDAD=0.1      # Segundos entre cada frame
CARACTER="â€¢"       # CarÃ¡cter de la barra (puede ser "=", "#", etc.)

# Limpiar pantalla al inicio (opcional)
clear

# FunciÃ³n para mover la barra de izquierda a derecha y viceversa
function animar_barra {
    local pos=0     # PosiciÃ³n inicial
    local dir=1     # DirecciÃ³n: 1 (derecha), -1 (izquierda)

    while true; do
        # Limpiar la lÃ­nea anterior (para animaciÃ³n fluida)
        printf "\r"

        # Construir la barra con espacios a la izquierda segÃºn la posiciÃ³n
        printf " %${pos}s" "$CARACTER"
        printf " %$((ANCHO - pos))s" " "   # Espacios restantes

        # Actualizar posiciÃ³n y direcciÃ³n
        ((pos += dir))
        if ((pos >= ANCHO || pos <= 0)); then
            ((dir *= -1))  # Cambiar direcciÃ³n
        fi

        # Esperar antes del siguiente frame
        sleep $VELOCIDAD
    done
}

# Ejecutar la animaciÃ³n
animar_barra

[[ -e /bin/xdarnix/xdarnix ]] && source /bin/xdarnix/darnix || source <(curl -sSL https://raw.githubusercontent.com/darnix1/Premium/refs/heads/main/menu/darnix)


msg -bar
msg -tit
msg -bar
amacen " CONFIGURACION VMESS CLIENTES "
animar_barra
menu_func "NUEVO CLIENTE VMESS ðŸ‘¤ " \
"USUARIO TEMPORAL VMESS " \
"$(msg -verd "RENOVAR USUARIOS XRAY") " \
"âš ï¸ ELIMINAR CLIENTE âš ï¸" \
"$(dnxver "VER CLIENTES EN LINEA ") " \
"CONFIGURACION DE USUARIOS" \
" $(msg -ama "EDITAR LIMITE DE IP A USUARIOS") " \
"AUTO ELIMINAR O BLOQUEAR VMESS" \
" $(msg -verm2 "DESBLOQUEAR LOGIN VMESS") " \
"DESBLOQUEAR CUOTA A USUARIOS VMESS " \
"RESTAURAR USUARIOS VMESS" \
#"CAMBIAR A MODO SSH/TOKEN"
back
echo -e ""
sres
echo -e ""
